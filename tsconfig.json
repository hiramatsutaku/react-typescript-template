{
  "compilerOptions": {
    // Project Options
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "noEmit": true,
    "jsx": "react",
    // Strict Checks
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // Module Resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    // Linter Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // Advanced
    "skipLibCheck": true
  }
}
